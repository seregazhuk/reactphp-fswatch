{
    "name": "seregazhuk/reactphp-fswatch",
    "type": "library",
    "description": "Library for monitoring file changes with fswatch and ReactPHP",
    "license": "MIT",
    "keywords": [
        "php",
        "asynchronous",
        "fswatch",
        "reactphp",
        "filesystem"
    ],
    "authors": [
        {
            "name": "Sergey Zhuk",
            "email": "seregazhuk88@gmail.com",
            "homepage": "https://sergeyzhuk.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "react/event-loop": "^1.1",
        "evenement/evenement": "^3.0",
        "react/child-process": "^0.6.1"
    },
    "require-dev": {
        "laravel/pint": "^1.20",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^10.1.0",
        "react/async": "^4.3",
        "rector/rector": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Seregazhuk\\ReactFsWatch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Seregazhuk\\ReactFsWatch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit",
        "pint-fix": "./vendor/bin/pint",
        "pint": "./vendor/bin/pint --test",
        "rector": "./vendor/bin/rector",
        "stan": "phpstan analyse -c phpstan.neon --ansi",
        "checks": [
            "@test",
            "@rector",
            "@stan",
            "@pint-fix"
        ]
    }
}
